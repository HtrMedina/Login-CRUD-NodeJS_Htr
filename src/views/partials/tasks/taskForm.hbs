<div class="card card-body p-4 rounded-4 bg-dark text-white">
    <h3 class="text-center">Insertar una Tarea</h3>
    <form action="/task/add" method="POST">
        <div class="mb-3">
            <label for="title">Titulo</label>
            <input type="text" name="title" placeholder="Ingresa un titulo" 
            id="title" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="mb-3">
            <label for="description">Descripcion</label>
            <textarea name="description" placeholder="Ingresa una descripcion" 
            id="description" class="form-control rounded-0 bg-dark text-white"></textarea>
        </div>
        <div class="text-center">
            <button class="btn btn-outline-primary">Agregar</button>
        </div>
    </form>
</div>