{{#if products}}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>N.</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{@index}}</td>
            <td>{{name}}</td>
            <td>{{quantity}}</td>
            <td>{{price}}</td>
            <td>
                <a href="/products/edit/{{_id}}" class="btn btn-info">Editar</a>
                <a href="/products/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1 class="text-center">No hay Productos</h1>
        <img src="/icons/productos.png" style="width: 50%; height: auto;" >
    </div>
</div>
{{/if}}



