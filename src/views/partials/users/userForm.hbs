<div class="card card-body p-4 rounded-3 bg-dark text-white">
    <h3 class="text-center">Ingresar un Usuario</h3>
    <form action="/users/add" method="POST">
        <div class="mb-3">
            <label for="name">Nombre</label>
            <input type="text" name="name" placeholder="Ingresa un usuario" 
            id="name" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="mb-3">
            <label for="email">Correo</label>
            <input type="email" name="email" placeholder="Ingresa un email" 
            id="email" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="mb-3">
            <label for="password">Contraseña</label>
            <input type="password" name="password" placeholder="Ingresa una contraseña" 
            id="password" class="form-control rounded-0 bg-dark text-white">
        </div>
        <div class="text-center">
            <button class="btn btn-outline-primary">Agregar</button>
        </div>
    </form>
</div>