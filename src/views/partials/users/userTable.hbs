{{#if users}}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Contrase√±a</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{@index}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{password}}</td>
            <td>
                <a href="/users/edit/{{_id}}" class="btn btn-info">Editar</a>
                <a href="/users/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1 class="text-center">No hay Usuarios</h1>
        <img src="/icons/usuarios.png" style="width: 50%; height: auto;" >
    </div>
</div>
{{/if}}



