{{#if clients}}
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>N.</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th>CP</th>
            <th>Telefono</th>
            <th>Accion</th>
        </tr>
    </thead>
    <tbody>
        {{#each clients}}
        <tr>
            <td>{{@index}}</td>
            <td>{{name}}</td>
            <td>{{address}}</td>
            <td>{{postalCode}}</td>
            <td>{{phone}}</td>
            <td>
                <a href="/clients/edit/{{_id}}" class="btn btn-info">Editar</a>
                <a href="/clients/delete/{{_id}}" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center">
        <h1 class="text-center">No hay Clientes</h1>
        <img src="/icons/usuarios.png" style="width: 50%; height: auto;" >
    </div>
</div>
{{/if}}

