<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
                <h1>Editar Usuario</h1>
                <form action="/users/edit/{{user._id}}" method="POST">
                    <div class="mb-3">
                        <label for="name">Nombre</label>
                        <input type="text" name="name" placeholder="Ingresa un nombre" 
                        value="{{user.name}}" class="form-control rounded-0 bg-dark text-white">
                    </div>
                    <div class="mb-3">
                        <label for="email">Correo</label>
                        <input type="email" name="email" placeholder="Ingresa una correo" 
                        value="{{user.email}}" class="form-control rounded-0 bg-dark text-white">
                    </div>
                    <div class="mb-3">
                        <label for="password">Contraseña</label>
                        <input type="password" name="password" placeholder="Ingresa una contraseña" 
                        value="{{user.password}}" class="form-control rounded-0 bg-dark text-white">
                    </div>

                    <button class="btn btn-outline-success btn-sm mt-2">Guardar</button>
                </form>
            </div>
        </div>
    </div>
</div>